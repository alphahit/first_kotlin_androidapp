<?xml version="1.0" encoding="utf-8"?><!--In Android development, XML (Extensible Markup Language) is
 used to define the layout and appearance of the user interface (UI)
  components in your app. These XML files reside in the res/layout
  folder and describe how elements like TextView, Button, EditText, etc.,
  should appear and behave on the screen.-->

<!--By using XML, you keep the UI separate from the logic written in
 Kotlin/Java code, making your code cleaner and more maintainable.-->

<!--ConstraintLayout: More flexible and powerful, allowing views to be positioned relative to one another or the parent.-->
<!--FrameLayout: Designed to stack child views on top of each other.-->
<!--LinearLayout: Arranges child views in a single row (horizontal) or column (vertical).-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/helloWorldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#ff5733"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Android!!"
        android:textSize="20sp" />
    <Button
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click This"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/valueOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="5"
            android:textColor="#ff5733"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/valueTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#ff5733"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff5733"
            android:textSize="20sp" />
    </LinearLayout>
    <Button
        android:id="@+id/sumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perform Sum" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/valueIncrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="5"
            android:textColor="#ff5733"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/valueIncrementTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#ff5733"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/resultIncrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff5733"
            android:textSize="20sp" />
    </LinearLayout>





    <Button
        android:id="@+id/increButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perform Increment" />

    <EditText
        android:id="@+id/inputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name" />
    <!--    <ImageView-->
    <!--        android:id="@+id/logoImage"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:src="@drawable/ic_launcher" />-->


</LinearLayout>
